<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CouchbaseHackathonApp.Views.SettingsPage"
             Title="Settings">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <Label 
                Text="Sync Configuration"
                FontSize="24"
                FontAttributes="Bold"/>
            
            <Frame BorderColor="LightGray" CornerRadius="10" Padding="15">
                <StackLayout Spacing="15">
                    
                    <Label 
                        Text="Sync Gateway URL"
                        FontSize="14"
                        FontAttributes="Bold"/>
                    
                    <Entry 
                        x:Name="SyncUrlEntry"
                        Placeholder="wss://your-sync-gateway.com/dbname"
                        Text="wss://HACKATHON_SYNC_GATEWAY_URL/trainyardapp"
                        FontSize="14"/>
                    
                    <Label 
                        Text="Username"
                        FontSize="14"
                        FontAttributes="Bold"
                        Margin="0,10,0,0"/>
                    
                    <Entry 
                        x:Name="UsernameEntry"
                        Placeholder="Enter username"
                        FontSize="14"/>
                    
                    <Label 
                        Text="Password"
                        FontSize="14"
                        FontAttributes="Bold"
                        Margin="0,10,0,0"/>
                    
                    <Entry 
                        x:Name="PasswordEntry"
                        Placeholder="Enter password"
                        IsPassword="True"
                        FontSize="14"/>
                    
                </StackLayout>
            </Frame>
            
            <Frame 
                x:Name="StatusFrame"
                BorderColor="LightGray" 
                CornerRadius="10" 
                Padding="15"
                BackgroundColor="#F5F5F5">
                
                <StackLayout Spacing="10">
                    <Label Text="Sync Status" FontSize="14" FontAttributes="Bold"/>
                    <Label x:Name="StatusLabel" Text="Not Connected" FontSize="14"/>
                </StackLayout>
            </Frame>
            
            <Button 
                x:Name="SyncButton"
                Text="Start Sync"
                FontSize="18"
                BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="25"
                HeightRequest="50"
                Clicked="OnSyncButtonClicked"/>
            
            <Label 
                Text="⚠️ Note: You need Sync Gateway URL and credentials from hackathon organizers"
                FontSize="12"
                TextColor="Gray"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Margin="0,20,0,0"/>
            
            <BoxView HeightRequest="1" Color="LightGray" Margin="0,20,0,0"/>
            
            <Label 
                Text="Test Data"
                FontSize="24"
                FontAttributes="Bold"/>
            
            <Button 
                Text="Generate Test Wagons"
                FontSize="16"
                BackgroundColor="#FF9800"
                TextColor="White"
                CornerRadius="20"
                HeightRequest="45"
                Clicked="OnGenerateTestDataClicked"/>
            
            <Label 
                Text="Creates 20 sample wagons for testing"
                FontSize="12"
                TextColor="Gray"
                HorizontalOptions="Center"/>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
