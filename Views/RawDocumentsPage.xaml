<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CouchbaseHackathonApp.Views.RawDocumentsPage"
             Title="ðŸ“„ Raw Documents">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackLayout Grid.Row="0" Padding="20,10" BackgroundColor="{StaticResource Primary}">
            <Label x:Name="CountLabel" 
                   Text="Loading documents..." 
                   TextColor="White" 
                   FontSize="18" 
                   FontAttributes="Bold"/>
            <Label Text="All documents from registry.cargo collection" 
                   TextColor="White" 
                   FontSize="12" 
                   Opacity="0.8"/>
        </StackLayout>

        <!-- Documents List -->
        <CollectionView Grid.Row="1" 
                       x:Name="DocumentsCollectionView"
                       SelectionMode="None"
                       Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="15" 
                           Margin="5" 
                           BackgroundColor="White" 
                           CornerRadius="10" 
                           HasShadow="True">
                        <StackLayout>
                            <Label Text="{Binding Id}" 
                                   FontAttributes="Bold" 
                                   FontSize="14"
                                   TextColor="{StaticResource Primary}"/>
                            <Label Text="{Binding Type}" 
                                   FontSize="12" 
                                   TextColor="Gray"
                                   Margin="0,5,0,0"/>
                            <Label Text="{Binding DataJson}" 
                                   FontSize="11" 
                                   TextColor="DarkGray"
                                   LineBreakMode="TailTruncation"
                                   MaxLines="3"
                                   Margin="0,5,0,0"/>
                            <Label Text="{Binding Sequence}" 
                                   FontSize="10" 
                                   TextColor="LightGray"
                                   Margin="0,5,0,0"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Empty State -->
        <StackLayout Grid.Row="1" 
                    x:Name="EmptyState"
                    IsVisible="False"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center"
                    Padding="20">
            <Label Text="ðŸ“­" 
                   FontSize="72" 
                   HorizontalOptions="Center"/>
            <Label Text="No documents found" 
                   FontSize="20" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"
                   Margin="0,10,0,0"/>
            <Label Text="The collection is empty" 
                   FontSize="14" 
                   TextColor="Gray" 
                   HorizontalOptions="Center"/>
        </StackLayout>
    </Grid>
</ContentPage>
