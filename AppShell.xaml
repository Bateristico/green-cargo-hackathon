<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CouchbaseHackathonApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:CouchbaseHackathonApp.Views"
    Title="Train Yard Manager">

    <TabBar>
        <ShellContent
            Title="Tasks"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate views:TasksListPage}"
            Route="TasksListPage" />
        
        <ShellContent
            Title="Wagons"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate views:WagonsListPage}"
            Route="WagonsListPage" />
        
        <ShellContent
            Title="Settings"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate views:SettingsPage}"
            Route="SettingsPage" />
    </TabBar>

</Shell>
